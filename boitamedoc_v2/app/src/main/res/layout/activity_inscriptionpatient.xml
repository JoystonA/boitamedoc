<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inscrip_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        app:errorEnabled="true">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/inscrip_nom_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Nom" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inscrip_prenom_patient_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        app:errorEnabled="true">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/inscrip_prenom_patient_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Prénom" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inscrip_date_patient_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <com.santalu.maskedittext.MaskEditText
            android:id="@+id/inscrip_date_patient_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Date de naissance"
            app:met_mask="##/##/####"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inscrip_maladie_patient_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inscrip_maladie_patient_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maladie"
            android:inputType="text" />

        <TextView
            android:id="@+id/name_legende_num_secu_inscrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Numéro Sécurité Social :"
            android:textSize="18sp" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/inscrip_num_secu_patient_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp" />

    <Switch
        android:id="@+id/inscrip_switch_apte_patient"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="18dp"
        android:text="Apte"
        android:textColor="@color/colorFont2"/>

    <Button
        android:id="@+id/ValidButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:onClick="finish"
        android:text="Terminer l'inscription"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_bouton"
        android:textColor="#FFFFFF" />
</LinearLayout>
