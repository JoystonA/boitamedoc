<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name_legende_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Votre Médicament"
        android:textSize="24sp"
        android:textColor="@color/colorFont1"
        android:fontFamily="sans-serif-condensed-medium"/>

    <TextView
        android:id="@+id/id_medoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID du médicament"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="@color/colorFont2"
        android:fontFamily="sans-serif-condensed-medium"/>

    <TextView
        android:id="@+id/num_lot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numéro de lot"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="@color/colorFont2"
        android:fontFamily="sans-serif-condensed-medium"/>

    <TextView
        android:id="@+id/date_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date d'expiration"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="@color/colorFont2"
        android:fontFamily="sans-serif-condensed-medium"/>

    <TextView
        android:id="@+id/nom_medoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/colorFont2"
        android:textSize="14sp" />


</LinearLayout>
