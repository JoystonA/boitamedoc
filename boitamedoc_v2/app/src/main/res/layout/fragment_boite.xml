<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/relative_layout_info_page_traitement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp">

        <TextView
            android:id="@+id/BAMText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BAMText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="5dp"
            android:text="name" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_layout_page_traitement_boite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_layout_info_page_traitement"
        android:background="@color/colorBackground"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="0dp">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dip">

                <Button
                    android:id="@+id/case1"
                    android:layout_width="0dp"
                    android:layout_height="91dp"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:text="Case 1"
                    android:background="@drawable/ic_bouton_case_vf_01"
                    android:fontFamily="sans-serif-condensed-medium"/>

                <Button
                    android:id="@+id/case2"
                    android:layout_width="0dp"
                    android:layout_height="91dp"
                    android:layout_toEndOf="@+id/case1"
                    android:layout_weight="1"
                    android:text="Case 2"
                    android:background="@drawable/ic_bouton_case_vf_01"
                    android:fontFamily="sans-serif-condensed-medium"/>

                <Button
                    android:id="@+id/case3"
                    android:layout_width="0dp"
                    android:layout_height="91dp"
                    android:layout_toEndOf="@+id/case2"
                    android:layout_weight="1"
                    android:text="Case 3"
                    android:background="@drawable/ic_bouton_case_vf_01"
                    android:fontFamily="sans-serif-condensed-medium"/>

                <Button
                    android:id="@+id/case4"
                    android:layout_width="0dp"
                    android:layout_height="91dp"
                    android:layout_toEndOf="@+id/case3"
                    android:layout_weight="1"
                    android:text="Case 4"
                    android:background="@drawable/ic_bouton_case_vf_01"
                    android:fontFamily="sans-serif-condensed-medium"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dip">

                <Button
                    android:id="@+id/case5"
                    android:layout_width="0dp"
                    android:layout_height="91dp"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:text="Case 5"
                    android:background="@drawable/ic_bouton_case_vf_01"
                    android:fontFamily="sans-serif-condensed-medium"/>

                <Button
                    android:id="@+id/case6"
                    android:layout_width="0dp"
                    android:layout_height="91dp"
                    android:layout_toEndOf="@+id/case1"
                    android:layout_weight="1"
                    android:text="Case 6"
                    android:background="@drawable/ic_bouton_case_vf_01"
                    android:fontFamily="sans-serif-condensed-medium"/>

                <Button
                    android:id="@+id/case7"
                    android:layout_width="0dp"
                    android:layout_height="91dp"
                    android:layout_toEndOf="@+id/case2"
                    android:layout_weight="1"
                    android:text="Case 7"
                    android:background="@drawable/ic_bouton_case_vf_01"
                    android:fontFamily="sans-serif-condensed-medium"/>

                <Button
                    android:id="@+id/case8"
                    android:layout_width="0dp"
                    android:layout_height="91dp"
                    android:layout_toEndOf="@+id/case3"
                    android:layout_weight="1"
                    android:text="Case 8"
                    android:background="@drawable/ic_bouton_case_vf_01"
                    android:fontFamily="sans-serif-condensed-medium"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/InfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infotext"
            android:textSize="20sp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorFont1"/>
    </RelativeLayout>






</RelativeLayout>