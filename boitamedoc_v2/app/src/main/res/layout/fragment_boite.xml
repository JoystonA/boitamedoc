<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <Button
        android:id="@+id/case7"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="195dp"
        android:layout_toEndOf="@+id/case2"
        android:text="Case 7" />

    <Button
        android:id="@+id/case5"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="195dp"
        android:text="Case 5" />

    <Button
        android:id="@+id/case8"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="195dp"
        android:text="Case 8" />

    <Button
        android:id="@+id/case6"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="00dp"
        android:layout_marginBottom="195dp"
        android:layout_toEndOf="@+id/case1"
        android:text="Case 6" />

    <Button
        android:id="@+id/case3"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_above="@+id/case7"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/case2"
        android:text="Case 3" />

    <Button
        android:id="@+id/case1"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_above="@+id/case5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="0dp"
        android:text="Case 1" />

    <Button
        android:id="@+id/case4"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_above="@+id/case8"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/case3"
        android:text="Case 4" />

    <TextView
        android:id="@+id/BAMText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/InfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-1dp"
        android:text="@string/infotext"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BAMText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="5dp"
        android:text="name" />

    <Button
        android:id="@+id/case2"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_above="@+id/case6"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/case1"
        android:text="Case 2" />

</RelativeLayout>