<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="-30dp"
        app:srcCompat="@mipmap/ic_logo_application_foreground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="150dp"
        android:background="#F7F7F7"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="350dp"
        android:background="#F7F7F7"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="doliprane" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/Frame_Layout_Bienvenue"
        android:layout_width="200dp"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/Name_User"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Bienvenue name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@id/Frame_Layout_Bienvenue"
        android:layout_marginTop="75dp">

        <TextView
            android:id="@+id/Name_Patient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:text="Patient : name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#333333"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="700dp"
        android:text="TextView" />

</RelativeLayout>