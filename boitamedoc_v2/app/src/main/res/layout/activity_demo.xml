<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Page de dÃ©monstration"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/auto_on"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Auto On"
            android:background="@drawable/bouton"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/auto_off"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Auto Off"
            android:background="@drawable/bouton"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/manuel_on"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Manuel On"
            android:background="@drawable/bouton"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/manuel_off"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Manuel Off"
            android:background="@drawable/bouton"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Notification"
            android:background="@drawable/bouton"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>
</RelativeLayout>