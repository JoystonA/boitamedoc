<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
        android:id="@+id/name_legende_modif_compte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Modification en cours"
        android:textAlignment="center"
        android:textSize="24sp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:errorEnabled="true">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/modif_gestionnaire_nom_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Nom" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:errorEnabled="true">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/modif_gestionnaire_prenom_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="PrÃ©nom" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:errorEnabled="true">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/modif_gestionnaire_lien_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Lien avec le patient" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:errorEnabled="true">


        <com.santalu.maskedittext.MaskEditText
            android:id="@+id/modif_gestionnaire_naissance_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:inputType="date"
            android:hint="Date de naissance"
            app:met_mask="##/##/####"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:errorEnabled="true">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/modif_gestionnaire_email_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:inputType="textEmailAddress"
            android:hint="Email" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        app:errorEnabled="true">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/modif_gestionnaire_ancien_mdp_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Ancien mot de passe"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:errorEnabled="true">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/modif_gestionnaire_nvx_mdp_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Nouveau mot de passe"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:errorEnabled="true">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/modif_gestionnaire_conf_mdp_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="Comfirmer nouveau mot de passe"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/valider_modif_compte"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Valider"
        android:onClick="Validation_modif"
        android:layout_gravity="center"
        android:background="@drawable/bouton"
        android:textColor="#FFFFFF"/>

</android.support.v7.widget.LinearLayoutCompat>

</ScrollView>