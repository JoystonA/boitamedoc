<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/traitement_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/title_traitement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Traitement pendant nbr jours"
            android:textColor="@color/colorFont1"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_traitement"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-condensed"
            android:text="nbr comprimé de name_medicament (name_periode) \nnbr comprimé de name_medicament (name_periode)\nnbr comprimé de name_medicament (name_periode)\nnbr comprimé de  name_medicament (name_periode)"
            android:textColor="@color/colorFont2"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/traitement_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/traitement_layout"
        android:background="@color/colorBackground"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/title_traitement2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Traitement pendant nbr jours"
            android:textColor="@color/colorFont1"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_traitement2"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-condensed"
            android:text="nbr comprimé de name_medicament (name_periode) \nnbr comprimé de name_medicament (name_periode)\nnbr comprimé de name_medicament (name_periode)\nnbr comprimé de  name_medicament (name_periode)"
            android:textColor="@color/colorFont2"
            android:textSize="16dp" />
    </RelativeLayout>

</RelativeLayout>